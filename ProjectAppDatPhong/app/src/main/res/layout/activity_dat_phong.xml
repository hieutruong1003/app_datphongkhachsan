<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DatPhong"
    android:background="#FAFBFB">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2196F3"
        android:minHeight="?attr/actionBarSize"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8"
            >
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_marginTop="15dp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/icon_back"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10dp"></ImageButton>
            <TextView
                android:id="@+id/textTitleDatPhong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:hint="Khách Sạn - Đà Nẵng"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                ></TextView>
            <EditText
                android:id="@+id/EditTexTimKiem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:hint="Tìm Kiếm Khách Sạn"
                android:textColor="#fff"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                ></EditText>
            <ImageButton
                android:id="@+id/buttonTimKiem"
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/icon_search"
                android:layout_alignParentRight="true"
                ></ImageButton>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ListView
        android:layout_marginTop="5dp"
        android:background="#E8E8E8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewDatPhong"
        android:layout_below="@+id/toolbarDatPhong">
    </ListView>

</LinearLayout>